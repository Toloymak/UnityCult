@using Models.Models.Players
@using Services.Services
@inject IInfoProvider _infoProvider

<div class="pl-4 navbar navbar-dark" style="padding: 10px">
    <div style="cursor: default; margin-top: auto; margin-bottom: auto; color: white">
        @foreach (var resource in _infoProvider.GetResources(PlayerStorage))
        {
            <div style="display: flex;
                 margin-left: 5px;
                 margin-right: 5px;
                 white-space: nowrap;">
                <div title="@resource.Key"
                     style="
                         font-size: 14px;
                         text-overflow: ellipsis;
                         white-space: nowrap;
                         overflow: hidden;">
                    @resource.Key
                </div>
                <div style="margin-top: auto; margin-bottom: auto; margin-left: auto">
                    @resource.Value
                </div>
            </div>
        }
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Map
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="Effects" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Effects
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="People" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> People
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="Tasks" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Tasks
            </NavLink>
        </li>
    </ul>
</div>

@code {
    private bool _collapseNavMenu = true;
    private string NavMenuCssClass => _collapseNavMenu ? "collapse" : null;
    
    [Parameter]
    public PlayerStorageModel PlayerStorage { get; set; }
    
    private void ToggleNavMenu()
    {
        _collapseNavMenu = !_collapseNavMenu;
    }
}